{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "POST /api/v1/store",
  "description": "A valid body for a POST request to /api/v1/store",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "message": {
      "type": "string",
      "minLength": 5,
      "maxLength": 2048
    },
    "phone": {
      "type": "string",
      "minLength": 10,
      "maxLength": 20
    },
    "order": {
      "type": "object",
      "properties": {
        "term": {
          "type": "number",
          "exclusiveMinimum": 0,
          "maximum": 36
        },
        "cart": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number"
              },
              "quantity": {
                "type": "number",
                "exclusiveMinimum": 0
              }
            },
            "required": ["id", "quantity"]
          },
          "minItems": 1
        }
      },
      "required": ["term", "cart"]
    }
  },
  "additionalProperties": false,
  "required": ["name", "email", "message", "phone", "order"]
}
